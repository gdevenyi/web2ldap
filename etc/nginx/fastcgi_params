fastcgi_param  QUERY_STRING       $query_string;
fastcgi_param  REQUEST_METHOD     $request_method;
fastcgi_param  CONTENT_TYPE       $content_type;
fastcgi_param  CONTENT_LENGTH     $content_length;

# nginx cannot correctly separate path_info and script_name
# => set hard-coded URL prefix in SCRIPT_NAME
fastcgi_param  SCRIPT_NAME        '/web2ldap';
fastcgi_param  REQUEST_URI        $request_uri;
fastcgi_param  DOCUMENT_URI       $document_uri;
fastcgi_param  DOCUMENT_ROOT      $document_root;
fastcgi_param  SERVER_PROTOCOL    $server_protocol;
fastcgi_param  HTTPS              $https if_not_empty;

fastcgi_param  GATEWAY_INTERFACE  CGI/1.1;
fastcgi_param  SERVER_SOFTWARE    nginx/$nginx_version;

fastcgi_param  REMOTE_ADDR        $remote_addr;
fastcgi_param  REMOTE_PORT        $remote_port;
fastcgi_param  SERVER_ADDR        $server_addr;
fastcgi_param  SERVER_PORT        $server_port;
fastcgi_param  SERVER_NAME        $server_name;

fastcgi_param  PATH_INFO                  $path_info;

fastcgi_param SSL_CIPHER                  $ssl_cipher;
fastcgi_param HTTPS_CIPHER                $ssl_cipher;
fastcgi_param SSL_PROTOCOL                $ssl_protocol;
fastcgi_param SSL_SESSION_ID              $ssl_session_id;

# web2ldap really needs these env vars
fastcgi_param SSL_SERVER_S_DN             "-/-";
fastcgi_param SSL_SERVER_I_DN             "-/-";

fastcgi_param SSL_CLIENT_CERT_SERIAL      $ssl_client_serial if_not_empty;
fastcgi_param SSL_CLIENT_S_DN             $ssl_client_s_dn if_not_empty;
fastcgi_param SSL_CLIENT_I_DN             $ssl_client_i_dn if_not_empty;
fastcgi_param SSL_CLIENT_VERIFY           $ssl_client_verify if_not_empty;
#fastcgi_param SSL_CLIENT_CERT_FINGERPRINT $ssl_client_fingerprint if_not_empty;

# Mapping the full cert is lots of traffic
#fastcgi_param SSL_CLIENT_CERT             $ssl_client_cert if_not_empty;
#fastcgi_param SSL_CLIENT_CERT_RAW         $ssl_client_raw_cert if_not_empty;
